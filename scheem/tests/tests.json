[
	{
		"suite" : "quote",
		"tests" : [
			{
				"description" 	: "a number",
				"test" 			: ["quote", 3],
				"env"  			: {},
				"expected" 		: 3
			},
			{
				"description"	: "an atom",
				"test"			: ["quote", "dog"],
				"env"				: {},
				"expected"		: "dog"
			},
			{
				"description"	: "a list",
				"test"			: ["quote", [1, 2, 3]],
				"env"				: {},
				"expected"		: [1, 2, 3]
			}
		]
	},
	{
		"suite" : "add",
		"tests" : [
			{
				"description" 	: "without args",
				"test" 			: ["+"],
				"env"  			: {}
			},
			{
				"description" 	: "5 numbers",
				"test" 			: ["+", 1, 2, 3, 4, 5],
				"env"  			: {},
				"expected"		: 15
			},
			{
				"description" 	: "two numbers",
				"test" 			: ["+", 3, 5],
				"env"  			: {},
				"expected" 		: 8
			},
			{
				"description"	: "a number and an expression",
				"test"			: ["+", 3, ["+", 2, 2]],
				"env"				: {},
				"expected"		: 7
			},
			{
				"description"	: "a dog and a cat",
				"test"			: ["+", "dog", "cat"],
				"env"				: {}
			},
			{
				"description"	: "two plus two",
				"test"			: ["+", 2, 2],
				"env"				: {},
				"expected"		: 4
			}
		]
	},
	{
		"suite" : "=",
		"tests" : [
			{
				"description" : "one equals one",
				"test" : ["=", 1, 1],
				"env" : {},
				"expected" : "#t"
			},
			{
				"description" : "one equals two",
				"test" : ["=", 1, 2],
				"env" : {},
				"expected" : "#f"
			}
		]
	},
	{
		"suite" : "if",
		"tests" : [
			{
				"description" : "add in true branch",
				"test" : ["if", ["=", 1, 1], ["+", 2, 2], ["+", 5, 5]],
				"env"  : {},
				"expected" : 4
			},
			{
				"description" : "add in false branch",
				"test" : ["if", ["=", 1, 2], ["+", 2, 2], ["+", 5, 5]],
				"env"  : {},
				"expected" : 10
			},
			{
				"description" : "atom in true branch",
				"test" : ["if", ["=", 1, 1], ["quote", "duck"], ["quote", "pig"]],
				"env"  : {},
				"expected" : "duck"
			},
			{
				"description" : "atom in false branch",
				"test" : ["if", ["=", 1, 2], ["quote", "duck"], ["quote", "pig"]],
				"env"  : {},
				"expected" : "pig"
			}
		]
	}
]
